<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tcolin.myspotifyapp.Activities.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/layoutView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:background="@drawable/layout_background"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.tcolin.myspotifyapp.Views.FadeInNetworkImageView
        android:id="@+id/cover"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_centerHorizontal="true"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_x="81dp"
        android:layout_y="57dp"
        android:background="@drawable/no_album_art"
        android:visibility="visible"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/layoutView"
        app:layout_constraintTop_toTopOf="@+id/layoutView"
        android:layout_marginTop="62dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_x="148dp"
        android:layout_y="296dp"
        android:text="No song played."
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/layoutView"
        app:layout_constraintLeft_toRightOf="@+id/cover"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintTop_toTopOf="@+id/layoutView"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="artist"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/album"
        app:layout_constraintRight_toRightOf="@+id/album"
        app:layout_constraintTop_toBottomOf="@+id/album"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/album"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="album"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:cropToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginStart="4dp" />

</android.support.constraint.ConstraintLayout>
